{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block content %}
<div class="text">Modifier le profil</div>

<div class="container_form">
    {{ form_start(editProfileForm) }}
        {% for error in app.flashes('form_errors') %}
            {% for field, message in error %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
        {% endfor %}
        <div class="form-group">
            <label for="email">Email</label>
            {{ form_widget(editProfileForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            <label for="nom">Nom</label>
            {{ form_widget(editProfileForm.firstName, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            <label for="prenom">Pr√©nom</label>
            {{ form_widget(editProfileForm.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <button class="btn">Sauvegarder</button>
    {{ form_end(editProfileForm) }}
</div>
{% endblock %}
