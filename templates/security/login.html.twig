{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
<div class="text">Connexion</div>
<div class="container_form">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if app.flashes('error') %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
    {% endif %}


    <form method="post" action="{{ path('app_login') }}">
        <div class="form-group">
            <label for="inputEmail">Email:</label>
            <input type="email" id="inputEmail" name="email" value="{{ last_username }}" class="form-control" required autofocus>
        </div>

        <div class="form-group">
            <label for="inputPassword">Mot de passe:</label>
            <input type="password" id="inputPassword" name="password" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn">Se connecter</button>
    </form>
</div>

<div class="text-center mt-4">
    <a href="{{ path('app_register') }}" id="link-center">Vous n'avez pas de compte? Inscrivez-vous</a>
</div>
{% endblock %}

