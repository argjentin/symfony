{% extends 'base.html.twig' %}

{% block title %}Créer un événement{% endblock %}

{% block content %}
<div class="text">Créer un événement</div>
<div class="container_form">
    {{ form_start(eventForm) }}
        {% for error in app.flashes('form_errors') %}
            {% for field, message in error %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <div class="form-group">
            <label for="event_title">Titre</label>
            {{ form_widget(eventForm.title, {'attr': {'class': 'form-control', 'id': 'event_title'}}) }}
        </div>

        <div class="form-group">
            <label for="event_description">Description</label>
            {{ form_widget(eventForm.description, {'attr': {'class': 'form-control', 'id': 'event_description'}}) }}
        </div>

        <div class="form-group">
            <label for="event_datetime">Date et Heure</label>
            {{ form_widget(eventForm.datetime, {'attr': {'class': 'form-control', 'id': 'event_datetime'}}) }}
        </div>

        <div class="form-group">
            <label for="event_maxParticipants">Nombre de participants maximum</label>
            {{ form_widget(eventForm.maxParticipants, {'attr': {'class': 'form-control', 'id': 'event_maxParticipants'}}) }}
        </div>

        <div class="form-group check">
            <label for="event_isPublic">Public : </label>
            {{ form_widget(eventForm.public, {'attr': {'class': 'form-check-input', 'id': 'event_public'}}) }}
            <label class="form-check-label" for="event_public">Oui</label>
        </div>

        <button type="submit" class="btn btn-success">Créer</button>
    {{ form_end(eventForm) }}
</div>

{% endblock %}